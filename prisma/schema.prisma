datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id      Int      @id @default(autoincrement())
  name    String?  
  email   String   @unique
}

model Drone {
  id              Int       @id @default(autoincrement())
  name            String    
  model           String    
  make            String    
  serialNumber    Int    @unique
  batteryLife     Int
  topSpeed        Int
  createdAt       DateTime  @default(now())
}